{
  "name": "bike-community-platform",
  "version": "1.0.0",
  "description": "A platform for Indian bike enthusiasts to connect, share rides, and join events",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "client": "cd client && npm start",
    "server": "nodemon server/server.js",
    "build": "cd client && npm run build",
    "test": "node test-connection.js",
    "quick-test": "node test-connection.js",
    "test-backend": "node test-backend.js",
    "test-complete": "node test-backend.js",
    "seed": "node seed-data.js",
    "seed-enhanced": "node seed-enhanced.js",
    "seed-messages": "node seed-notifications-messages.js",
    "seed-all": "node seed-enhanced.js && node seed-notifications-messages.js",
    "seed-full": "node seed-full-data.js",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "keywords": [
    "bike",
    "community",
    "events",
    "riders",
    "india"
  ],
  "author": "Bike Community Platform",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
